{
  "expo": {
    "name": "MINDGAINS",
    "slug": "mindgains",
    "version": "1.0.0",
    "description": "Revolutionary Android app transforming ordinary Indians into intellectual powerhouses through bite-sized daily education on India's heritage, current affairs, and knowledge.",
    "keywords": ["education", "ai", "learning", "india", "current affairs", "history", "constitution", "quiz", "knowledge", "intellectual"],
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "mindgains-app",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "primaryColor": "#8b5cf6",
    "backgroundColor": "#0f0f23",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mindgains.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "UIBackgroundModes": ["background-processing"],
        "NSCameraUsageDescription": "Take photos of study materials to create learning missions",
        "NSPhotoLibraryUsageDescription": "Select images from your photo library for learning content"
      }
    },
    "android": {
      "package": "com.mindgains.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#0f0f23"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png",
      "name": "MINDGAINS - Transform Your Mind",
      "shortName": "MINDGAINS",
      "lang": "en",
      "scope": "/",
      "themeColor": "#8b5cf6",
      "backgroundColor": "#0f0f23",
      "display": "standalone",
      "orientation": "portrait",
      "startUrl": "/",
      "preferRelatedApplications": true
    },
    "plugins": [
      "expo-router", 
      "expo-font", 
      "expo-web-browser",
      "expo-camera",
      "expo-build-properties"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#0f0f23",
      "image": "./assets/images/icon.png"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "extra": {
      "eas": {
        "projectId": "mindgains-ai-project"
      }
    }
  }
}